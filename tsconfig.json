{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "scripthost"],
    "sourceMap": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "src/index.ts",
    "typings/index.d.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "examples/**/*.ts",
    "groups/**/*.ts",
    "interfaces/**/*.ts",
    "tasks/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
